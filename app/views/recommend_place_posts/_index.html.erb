<% posts.each do |post| %>
  <%= link_to recommend_place_post_path(post.id) do %>
    <div class='card post-card'>
      <sm class='ml-auto mr-3'><i class="fa-solid fa-chart-simple"></i> <%= post.post_view_counts.count %></sm>
      <%= image_tag post.get_post_image(200,200) %>
      <div class='card-body post-card-body'>
        <h5 class='card-title'><%= post.name %></h5>
        <p><%= post.caption %></p>
      </div>
    </div>
  <% end %>
<% end %>