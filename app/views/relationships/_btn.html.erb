<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォローを外す', user_relationships_path(user.id), method: :delete, remote:true, data: {"turbolinks" => false}, class: 'btn sm-btn unfollow-btn' %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user.id), method: :post, remote:true, data: {"turbolinks" => false}, class: 'btn sm-btn follow-btn' %>
  <% end %>
<% end %>