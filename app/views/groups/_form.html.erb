<%= form_with model: [category, group] do |f| %>
  <%= f.hidden_field :owner_id, :value => current_user.id %>
  <div class='form-group'>
    <label>表題：</label><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <label>表題の説明：</label><br>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <label>表題に基づく画像</label><br>
    <%= f.file_field :group_image, accept: 'images/*', class: 'd-block' %>
  </div>
  <div class='form-group'>
    <%= f.submit btn, class: 'btn btn-sm submit-btn' %>
  </div>
<% end %>